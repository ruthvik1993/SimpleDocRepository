<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="15dp">

    <RelativeLayout
        android:id="@+id/rvImgText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgThumbnail"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgThumbnail"
            android:layout_alignTop="@+id/imgThumbnail"
            android:gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/imgThumbnail">

            <apnacomplex.docrepository_anjaneya.views.TextView_RobotoRegular
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PAN_card.jpg"
                android:textSize="@dimen/tx_size_file_name" />

            <apnacomplex.docrepository_anjaneya.views.TextView_RobotoLight
                android:id="@+id/txtFileSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtTitle"
                android:text="File Size 54kb"
                android:textSize="@dimen/tx_size_files" />


        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/imgMenu"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/moregrey_ic" />
</RelativeLayout>